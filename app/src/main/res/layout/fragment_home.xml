<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Spyfall.Root.Primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/create_room_button"
        android:layout_width="@dimen/default_button_width"
        android:layout_height="wrap_content"
        android:text="@string/home_screen_create_room_button_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        />

    <Button
        android:id="@+id/join_room_button"
        android:layout_width="@dimen/default_button_width"
        android:layout_height="wrap_content"
        android:text="@string/home_screen_join_room_button_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_room_button"
        />

    <Button
        android:id="@+id/locations_reference_button"
        style="@style/Widget.Spyfall.Button.Secondary"
        android:layout_width="@dimen/default_button_width"
        android:layout_height="wrap_content"
        android:text="@string/home_screen_locations_reference_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_room_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
